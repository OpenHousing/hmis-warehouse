.row
  .col-sm-8
    = simple_form_for @health_agency, url: @form_url do |f|
      - if @health_agency.errors.any?
        #error_explanation
          %h2= "#{pluralize(@health_agency.errors.count, "error")} prohibited this health_agency from being saved:"
          %ul
            - @health_agency.errors.full_messages.each do |msg|
              %li= msg
      = f.input :name

      .form-actions
        = f.submit 'Save', class: 'btn btn-primary'
