- content_for :title,  'Team Coordinators'
%h1= content_for :title

= render 'menus/health_admin_tabs'
= render 'form'
- if @team_coordinators.blank?
  %p.no-data No team coordinators assigned
- else
  %table.table.table-condensed
    %thead
      %tr
        %th
          Team Coordinator
        %th
          Care Coordinator
        %th
    %tbody
      - @coordinators.each do |coordinator|
        %tr
          %td
            = @team_coordinators[coordinator.user_id].name
          %td
            = @care_coordinators[coordinator.care_coordinator_id].name
          %td
            = link_to admin_health_team_coordinator_path(coordinator.id), class: 'btn btn-danger btn-icon-only btn-sm', method: :delete do
              %i.icon-cross
