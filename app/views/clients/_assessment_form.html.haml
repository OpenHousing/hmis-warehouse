- if @form[:answers].present?
  - content_for :modal_title, "#{@form.assessment_type} < #{@form.name}"
  %h3{style: 'margin-top: 0;'}= "Form Identifier: #{@form.answers['assessment_identifier']}"
  %p(style="font-size:smaller;font-style:italic;")
    Only answered questions are shown.
  - @form.answers.with_indifferent_access[:sections].each do |section|
    %h4.client__assessment-section-heading= section[:section_title]
    - section[:questions].each do |question|
      - if question[:answer].present?
        .client__assessment-question= question[:question]
        .client__assessment-answer= question[:answer]
- else
  - content_for :modal_title, "Assessment Form Not Found"