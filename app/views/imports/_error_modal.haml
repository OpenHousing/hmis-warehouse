%a{href: '#', data: {toggle: 'modal', target: "\#modal-#{modal_slug}"}}
  = total_errors
.modal.fade{id: "modal-#{modal_slug}", role: 'dialog'}
  .modal-dialog{role: 'document'}
    .modal-content
      .modal-header
        %h4 Import Errors
        %button.close{data: {dismiss: 'modal'}}
          %i.modal-icon-close
      .modal-body
        - if errors.any?
          - meta = errors.first
          %h3= errors.first['text']
          - errors.each do |e|
            = render 'error_list', error: e
